{
  "pluginAlias": "HomebridgeTinxyPlatform",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Tinxy"
      },
      "apiToken": {
        "title": "API Token",
        "type": "string",
        "required": true
      },
      "apiBaseUrl": {
        "title": "API Base URL",
        "type": "string",
        "default": "https://ha-backend.tinxy.in/v2/devices",
        "required": true
      },
      "debug": {
        "title": "Enable Debug Logging",
        "type": "boolean",
        "default": false
      }
    },
    "required": ["name", "apiToken", "apiBaseUrl"]
  }
}
